<!DOCTYPE html>
<html>
    <head>
        <title><%= post.featuredColumnTitle %></title>
        <style>
            footer{
                background-color: rgb(133, 132, 132);
                text-align: center;
                position: relative;
                margin-left: 0;
                margin-right: 0;
                margin-top: 0px;
            }
            .beian{
                text-decoration: none;
                color: black;
                font-size: 20px;
            }
        </style>
    </head>
    <body>
        <h1><%= post.featuredColumnTitle %></h1>
        <p><%= post.featuredColumnContent %></p>
        <p><%= post.featuredColumnCaptions %></p>
        <form id="makeFeaturedForm" action="/makeFeatured" method="POST">
        <% post.pictureUrl.forEach(function(image) { %> 
            <img src="./uploads/<%= image.filename %>" alt="<%= image.filename %>">
            <% if(admin == true){ %>
                <input type="checkbox" name="pictureUrl" id="pictureUrl" value="./uploads/<%= image.filename %>">
                <% }%>                     
        <% }); %>
        <input type="hidden" id="featuredColumnTitle" name="featuredColumnTitle" value="<%= post.featuredColumnTitle%>">
        <input type="hidden" id="featuredColumnContent" name="featuredColumnContent" value="<%= post.featuredColumnContent%>">
        <input type="hidden" id="featuredColumnCaptions" name="featuredColumnCaptions" value="<%= post.featuredColumnCaptions%>">
        <input type="hidden" id="username" name="username" value="<%=username%>">
        <button>Make featured</button>
        </form>
        <footer>
            <a href="https://beian.miit.gov.cn" target="_blank" class="beian">湘ICP备2023027594号-1</a>
        </footer>
    </body>
</html>